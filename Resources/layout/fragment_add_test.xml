
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:nestedScrollingEnabled="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:backgroundTint="@color/colorMain"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="@string/test_name"
                android:textAlignment="center"
                android:id="@id/editTextTestName"/>
            <EditText
                android:background="@drawable/multiline_border"
                android:layout_below="@+id/editTextTestName"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:lines="5"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:maxLines="10"
                android:gravity="top|left"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="@string/test_notation"
                android:textAlignment="center"
                android:id="@id/editTextTestNotation"/>
            <EditText
                android:layout_below="@+id/editTextTestNotation"
                android:backgroundTint="@color/colorMain"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="@string/number_of_questions"
                android:textAlignment="center"
                android:id="@id/editTextQuestionNumber"/>

            <Button
                android:text="Next"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_border"
                android:textColor="@color/colorMain"
                android:layout_below="@+id/editTextQuestionNumber"
                android:id="@+id/btnAddQuestions"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>