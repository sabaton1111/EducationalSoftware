<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"

        android:nestedScrollingEnabled="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="15dp"
                android:background="@mipmap/logo"
                android:id="@+id/imageViewWallpaper"
                />
            <ImageView
                android:background="#000000"
                android:padding="5dp"
                android:layout_below="@+id/imageViewWallpaper"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="120dp"
                android:layout_marginEnd="120dp"
                android:layout_marginTop="-60dp"
                android:id="@+id/imgViewProfilePic"/>
            <TextView
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:layout_below="@+id/imgViewProfilePic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:textSize="30dp"
                android:textColor="#000000"
                android:id="@+id/textViewUsername"
            android:text="dimiter41"/>
                <EditText
                android:layout_marginTop="30dp"
                android:layout_below="@+id/textViewUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Post"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:gravity="start"
                android:id="@+id/editTextPost"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_below="@+id/editTextPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutPost">
                <Button
                    android:text="@string/register_user"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_border"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:id="@+id/btnPost" />
                <Button
                    android:layout_marginEnd="15dp"
                    android:layout_weight="0.5"
                    android:text="@string/register_user"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@drawable/button_border"
                    android:id="@+id/btnPostt" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_margin="10dp"
                android:layout_below="@+id/layoutPost"
                android:id="@+id/recyclerViewTestsProfile"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
