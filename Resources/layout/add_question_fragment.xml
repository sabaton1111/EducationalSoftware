
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="@string/test_name"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textViewTestName" />
    <TextView
        android:layout_below="@+id/textViewTestName"
        android:text="Questions added: 0"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textViewQuestions" />
    <EditText
        android:background="@drawable/multiline_border"
        android:layout_below="@+id/textViewQuestions"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:lines="5"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:maxLines="10"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Question"
        android:textAlignment="center"
        android:id="@id/editTextQuestion"/>
    <EditText
        android:layout_below="@+id/editTextQuestion"
        android:backgroundTint="@color/colorMain"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:hint="Answer 1"
        android:textAlignment="center"
        android:id="@id/editTextAnswerOne"/>
    <EditText
        android:layout_below="@+id/editTextAnswerOne"
        android:backgroundTint="@color/colorMain"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:hint="Answer 2"
        android:textAlignment="center"
        android:id="@id/editTextAnswerTwo"/>
    <EditText
        android:layout_below="@+id/editTextAnswerTwo"
        android:backgroundTint="@color/colorMain"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:hint="Answer 3"
        android:textAlignment="center"
        android:id="@id/editTextAnswerThree"/>
    <EditText
        android:layout_below="@+id/editTextAnswerThree"
        android:backgroundTint="@color/colorMain"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:hint="Answer 4"
        android:textAlignment="center"
        android:id="@id/editTextAnswerFour"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:gravity = "end"
        android:orientation="vertical"
        android:id="@+id/radioGroupRegCorrectAnswer"
        android:layout_below="@id/editTextQuestion">
        <RadioButton
            android:gravity="end"
            android:checked="true"
            android:buttonTint="@color/colorMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbtnAnswerOne"       
        />
        <RadioButton
            android:gravity="end"
            android:layout_marginTop="10dp"
            android:buttonTint="@color/colorMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbtnAnswerTwo"/>
        <RadioButton
            android:gravity="end"
            android:layout_marginTop="12dp"
            android:buttonTint="@color/colorMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbtnAnswerThree"/>
        <RadioButton
            android:gravity="end"
            android:layout_marginTop="10dp"
            android:buttonTint="@color/colorMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbtnAnswerFour"/>
    </RadioGroup>
    <Button
        android:text="@string/add_question"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_border"
        android:textColor="@color/colorMain"
        android:layout_below="@+id/editTextAnswerFour"
        android:id="@+id/btnAddQuestions"/>
</RelativeLayout>