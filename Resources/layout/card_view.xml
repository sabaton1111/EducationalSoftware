
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
   xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:background="@color/colorWhite">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@mipmap/login"
                android:id="@+id/imageViewCard"
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test name"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:id="@+id/txtViewCardTestName"
                android:layout_below="@+id/imageViewCard"
            />
                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test notation"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:id="@+id/txtViewCardTestNotation"
                android:layout_below="@+id/txtViewCardTestName"
            />
             <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:textAlignment="textStart"
                android:layout_marginLeft="5dp"
                android:id="@+id/txtViewCardUser"
                android:layout_below="@+id/txtViewCardTestNotation"
            />
             <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:layout_marginRight="5dp"
                android:textAlignment="textEnd"
                android:layout_marginLeft="5dp"
                android:id="@+id/txtViewCardDate"
                android:layout_below="@+id/txtViewCardTestNotation"
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:layout_marginRight="5dp"
                android:textAlignment="textEnd"
                android:layout_marginLeft="5dp"
                android:id="@+id/txtViewNumberOfQuestions"
                android:visibility="invisible"
              
            />
            <Button
                android:text="Start test"
                android:background="@drawable/button_border"
                android:layout_below="@+id/txtViewCardUser"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
               android:id="@+id/btnCardStartTest"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>