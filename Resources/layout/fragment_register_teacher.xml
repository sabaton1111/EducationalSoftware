
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:nestedScrollingEnabled="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextTeacherFirstName"
                android:inputType="text"
                android:hint="@string/first_name"/>

            <EditText
                android:layout_below="@id/editTextTeacherFirstName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextTeacherLastName"
                android:inputType="text"
                android:hint="@string/last_name"/>

            <EditText
                android:layout_below="@id/editTextTeacherLastName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextTeacherEmail"
                android:inputType="textEmailAddress"
                android:hint="@string/email"/>

            <EditText
                android:layout_below="@id/editTextTeacherEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextTeacherPassword"
                android:inputType="textPassword"
                android:hint="@string/password"/>

            <EditText
                android:layout_below="@id/editTextTeacherPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextTeacherRepeatPassword"
                android:inputType="textPassword"
                android:hint="@string/repeat_password"/>
            <EditText
                android:layout_below="@id/editTextTeacherRepeatPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextTeacherSubject"
                android:inputType="text"
                android:hint="@string/subject"/>

            <EditText
                android:layout_below="@id/editTextTeacherSubject"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextTeacherInstitution"
                android:inputType="text"
                android:hint="@string/institution"/>

            <EditText
                android:layout_below="@id/editTextTeacherInstitution"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextTeacherAge"
                android:inputType="number"
                android:hint="@string/age"/>

            <Button
                android:layout_below="@id/editTextTeacherAge"
                android:text="@string/register_user"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:background="@drawable/button_border"
                android:id="@+id/btnTeacherRegisterUser" />

        </RelativeLayout>


    </ScrollView>
</RelativeLayout>