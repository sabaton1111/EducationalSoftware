
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:nestedScrollingEnabled="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/editTextUStudentFirstName"
                android:inputType="text"
                android:textAlignment="center"
                android:hint="@string/first_name"/>

            <EditText
                android:layout_below="@id/editTextUStudentFirstName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/editTextUStudentLastName"
                android:inputType="text"
                android:textAlignment="center"
                android:hint="@string/last_name"/>

            <EditText
                android:layout_below="@id/editTextUStudentLastName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/editTextUStudentEmail"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                android:hint="@string/email"/>

            <EditText
                android:layout_below="@id/editTextUStudentEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/editTextUStudentPassword"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:hint="@string/password"/>

            <EditText
                android:layout_below="@id/editTextUStudentPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/editTextUStudentRepeatPassword"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:hint="@string/repeat_password"/>

            <EditText
                android:layout_below="@id/editTextUStudentRepeatPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/editTextUStudentUniversity"
                android:inputType="text"
                android:textAlignment="center"
                android:hint="@string/university"/>

            <EditText
                android:layout_below="@id/editTextUStudentUniversity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/editTextUStudentSubject"
                android:inputType="text"
                android:textAlignment="center"
                android:hint="@string/subject"/>

            <EditText
                android:layout_below="@id/editTextUStudentSubject"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/editTextUStudentCourse"
                android:inputType="number"
                android:textAlignment="center"
                android:hint="@string/course"/>

            <EditText
                android:layout_below="@id/editTextUStudentCourse"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/editTextUStudentCountry"
                android:inputType="text"
                android:textAlignment="center"
                android:hint="@string/country"/>

            <EditText
                android:layout_below="@id/editTextUStudentCountry"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/editTextUStudentCity"
                android:inputType="text"
                android:textAlignment="center"
                android:hint="@string/city"/>

            <EditText
                android:layout_below="@id/editTextUStudentCity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/editTextUStudentAge"
                android:inputType="number"
                android:textAlignment="center"
                android:hint="@string/age"/>

            <Button
                android:layout_below="@id/editTextUStudentAge"
                android:text="@string/register_user"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/button_border"
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/btnUStudentRegisterUser" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>