
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:nestedScrollingEnabled="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextStudentFirstName"
                android:inputType="text"
                android:hint="@string/first_name"/>

            <EditText
                android:layout_below="@id/editTextStudentFirstName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextStudentLastName"
                android:inputType="text"
                android:hint="@string/last_name"/>

            <EditText
                android:layout_below="@id/editTextStudentLastName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextStudentEmail"
                android:inputType="textEmailAddress"
                android:hint="@string/email"/>

            <EditText
                android:layout_below="@id/editTextStudentEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextStudentPassword"
                android:inputType="textPassword"
                android:hint="@string/password"/>

            <EditText
                android:layout_below="@id/editTextStudentPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextStudentRepeatPassword"
                android:inputType="textPassword"
                android:hint="@string/repeat_password"/>

            <EditText
                android:layout_below="@id/editTextStudentRepeatPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextStudentSchool"
                android:inputType="text"
                android:hint="@string/school"/>

            <EditText
                android:layout_below="@id/editTextStudentSchool"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextStudentClass"
                android:inputType="number"
                android:hint="@string/classes"/>


            <EditText
                android:layout_below="@id/editTextStudentClass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextStudentCountry"
                android:inputType="text"
                android:hint="@string/country"/>

            <EditText
                android:layout_below="@id/editTextStudentCountry"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextStudentCity"
                android:inputType="text"
                android:hint="@string/city"/>



            <EditText
                android:layout_below="@id/editTextStudentCity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextStudentAge"
                android:inputType="number"
                android:hint="@string/age"/>

            <Button
                android:layout_below="@id/editTextStudentAge"
                android:text="@string/register_user"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/button_border"
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/btnStudentRegisterUser" />

        </RelativeLayout>


    </ScrollView>
</RelativeLayout>