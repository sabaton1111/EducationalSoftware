
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:nestedScrollingEnabled="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">

            <EditText
                style="@style/editTextStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/editTextAdminUniqueKey"
                android:inputType="text"
                android:hint="@string/key"/>

            <EditText
                android:layout_below="@id/editTextAdminUniqueKey"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextAdminFirstName"
                android:inputType="text"
                android:hint="@string/first_name"/>

            <EditText
                android:layout_below="@id/editTextAdminFirstName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextAdminLastName"
                android:inputType="text"
                android:hint="@string/last_name"/>

            <EditText
                android:layout_below="@id/editTextAdminLastName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextAdminEmail"
                android:inputType="textEmailAddress"
                android:hint="@string/email"/>

            <EditText
                android:layout_below="@id/editTextAdminEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextAdminPassword"
                android:inputType="textPassword"
                android:hint="@string/password"/>

            <EditText
                android:layout_below="@id/editTextAdminPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextAdminRepeatPassword"
                android:inputType="textPassword"
                android:hint="@string/repeat_password"/>
            <EditText
                android:layout_below = "@id/editTextAdminRepeatPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextAdminAge"
                android:inputType="number"
                android:hint="@string/age"/>

            <Button
                android:layout_below="@id/editTextAdminAge"
                android:text="@string/register_user"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:background="@drawable/button_border"
                android:id="@+id/btnAdminRegisterUser" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>