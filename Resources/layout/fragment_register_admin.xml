
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:nestedScrollingEnabled="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:gravity="center">

            <EditText
                style="@style/editTextStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/editTextAdminUniqueKey"
                android:inputType="text"
                android:hint="@string/key"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextAdminFirstName"
                android:inputType="text"
                android:hint="@string/first_name"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextAdminLastName"
                android:inputType="text"
                android:hint="@string/last_name"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextAdminEmail"
                android:inputType="textEmailAddress"
                android:hint="@string/email"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextAdminPassword"
                android:inputType="textPassword"
                android:hint="@string/password"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextAdminRepeatPassword"
                android:inputType="textPassword"
                android:hint="@string/repeat_password"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/editTextStyle"
                android:id="@+id/editTextAdminAge"
                android:inputType="number"
                android:hint="@string/age"/>

            <Button
                android:text="@string/register_user"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:background="@drawable/button_border"
                android:id="@+id/btnAdminRegisterUser" />

        </LinearLayout>


    </ScrollView>
</LinearLayout>